{
  "name": "ble",
  "browsers": [
    "chrome",
    "firefox"
  ],
  "options": {
    "auto_exit_iframes": true,
    "log_JS_retry_timeout": 1000,
    "parent_log_path": "./logs",
    "terminal_mode": false
  },
  "driver_options": {
    "accept_insecure_certs": true,
    "chrome_arguments": [],
    "firefox_arguments": [],
    "keep_browser_open": true,
    "page_load_strategy": "normal",
    "timeout": {
      "type": "pageLoad",
      "value": 300000
    },
    "unhandled_prompt_behavior": "dismiss and notify"
  },
  "units": {
    "1": {
      "bindings": null,
      "backup_of": null,
      "actions": {
        "2":
        {
          "type": "interceptor_add",
          "break": false,
          "name": "test",
          "request_section": "header",
          "key": "Authorization",
          "value": "Basic encode(foo:bar)"
        },
        "1":
        {
          "type": "interceptor_on",
          "break": false
        },
        "3": {
          "type": "goto",
          "break": false,
          "url": "http://httpbin.org/basic-auth/foo/bar"
        }
      }
    }
  }
}